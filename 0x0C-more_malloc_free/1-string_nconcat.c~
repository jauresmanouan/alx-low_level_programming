#include "main.h"
#include <stdlib.h>
#include <stdio.h>

/**
 * string_nconcat - a function that concatenates two strings.
 * @s1: first string
 * @s2: second string
 * @n: int variable
 * Return: pointer
 */

char *string_nconcat(char *s1, char *s2, unsigned int n)
{
	int count1, count2, len1, len2, sign = n;
	char *p;

	if (s1 == NULL)
		s1 = "";
	if (s2 == NULL)
		s2 = "";

	for (len1 = 0; s1[len1] != '\0'; len1++)
		;
	for (len2 = 0; s2[len2] != '\0'; len2++)
		;

	if (sign >= len2)
	{
		sign = len2;
		p = malloc(sizeof(char) * (len1 + len2 + 1));
	}
	else
		p = malloc(sizeof(char) * (len1 + n + 1));
	if (p == NULL)
		return (NULL);
	for (count1 = 0; count1 < len1; count1++)
	{
		p[count1] = s1[count1];
	}
	for (count2 = O; count2 < sign; count2++)
	{
		p[count1++] = s2[count2];
	}
	p[count1++] = '\0';
	return (p);
}
